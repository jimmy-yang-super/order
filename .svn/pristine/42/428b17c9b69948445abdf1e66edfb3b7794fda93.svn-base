$(document).on("click","#t2",function(){

	var orderid = $(this).attr("temval");
	var cont = $("#orderdetil_"+orderid);
	
	var url = "/order/orderDetil/"+orderid;
	
	if($(this).hasClass("sel")) { 
		$(this).removeClass("sel");
		cont.hide();
		cont.html("");
	}else {  
		$(this).addClass("sel");
		$.post(url,	function(data){
			cont.show();
			cont.html(data);
		});
	};
});
