@charset "utf-8";
/* CSS Document */
* {
	margin: 0;
	padding: 0;
}
.clear {
	clear: both;
}
ul, ol {
	list-style: none;
}
img {
	margin: 0;
	border: 0;
}
a{text-decoration:none;cursor:pointer;}

body {
	min-width: 1300px;
	margin: 0 auto;
}
body {
	font-family: "微软雅黑", Arial, SimSun, Helvetica, sans-serif;
	font-size: 14px;
	color: #585757;
}
.content_inner,.header_inner{
	margin:0 auto;
}
.header_inner{
	height: 60px;
}
.header_inner_l{
	float:left;
	width:312px;
}
.header_inner_r{
	float:right;
	width:272px;
	margin-right:20px;
}
.logo {
	float: left;
	width: 110px;
	height: 50px;
	padding-top: 10px;
	margin-left: 20px;
}
.tle {
	float:right;
	margin-left:18px;
	color: #aaaaaa;
	font-family: "华文楷体";
	font-size: 18px;
	line-height: 60px;
}
.hello{
	width:126px;
	float: left;
	color: #999999;
	font-family: "方正兰亭纤黑_GBK";
	font-size: 14px;
	line-height: 60px;
	text-align: center;
	border-right:1px #e5e5e5 solid;
}
.hello span {
	color: #288cca;
}
.out{
	width:72px;
	float:right;
	color: #999999;
	font-family: "方正兰亭纤黑_GBK";
	font-size: 14px;
	line-height: 60px;
	text-align: center;
	border-left:1px #e5e5e5 solid;
}
.email:hover,.out:hover{
	background-color:#edf8ff;
}
.email {
	position:relative;
	width:48px;
	float:left;
	padding-top:24px;
	padding-bottom:20px;
	padding-left:24px;
}
.email>p{
	 position:absolute;
	 top:15px;
	 right:19px;
	 color:#FFF;
	 font-family:Arial, Helvetica, sans-serif;
	 font-size:12px;
	 z-index:20;
 }
.email:after {
	content: '';
	position:absolute;
	right:15px;
	top: 14px;
	width: 22px;
	height: 17px;
	border-radius: 48%;
	background: #ff5555;
	z-index:18;
}
#content{
	position:relative;
	background-image:url(../images/header_shadow_03.png);
	background-repeat:repeat-x;
	background-color:#edf3f8;
}
.content_inner{
	margin:0 auto;
	padding-top:3px;
}
.lCon{
	position:absolute;
	left:0px;
	top:0px;
	width:200px;
	background-color:#001d28;
	height:2300px;
	z-index:20;
}
.lCon-btn{
	position:fixed;
	top:90px;
	left:200px;
	width:18px;
	height:21px;
	background-color:#fb9fa0;
	border-radius:0 4px 4px 0;
	padding-left:6px;
	padding-top:12px;
	z-index:22;
}
.lCon-btn:hover{
	background-color:#ff7379;
}
.lCon-btn:hover a{
	color:#ffffff;
}
.lCon>dl>dt{
	height:27px;
	border-bottom:1px #1a343e solid;
	font-family:"方正兰亭纤黑_GBK";
	font-size:13px;
	color:#677479;
	background-image:url(../images/list_03.png);
	background-repeat:no-repeat;
	background-position:20px 28px;
	padding-left:40px;
	padding-top:28px;
	margin-bottom:12px;
}
.lCon>dl>dd{
	line-height:40px;
	font-family:"方正兰亭纤黑_GBK";
	font-size:14px;
	color:#6e7b93;
	padding-left:40px;
}
.rCon{
	padding-left:200px;
	margin: 0 auto;
	background-color:#edf3f8;
	min-width:800px;
}
#content dd:hover{
	color:#FFF;
	background-color:#288cca;
}
